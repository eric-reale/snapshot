<%= render 'shared/navbar' %>
<% count = Camera.count %>

<!-- HTML for card to be displayed on index page -->
<div class="container container-index" >
  <div class="row">
    <h2 class="col-12 text-justify index-header"><strong><%= count %>+ cameras & photography equipment are available close to you.</strong></h2>
  </div>

  <div class="row">
    <div class="col-12 filter-container ml-0">
      <div class="filter-dropdowns-container ml-0 py-3">
        <div class="simple-search-form">
        <%= form_tag cameras_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder:"What are you looking for?"
        %>
        <%= submit_tag "Search", class: "btn btn-success" %>
        <% end %>
        </div>

        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <p>Brand</p>
          <%#= link_to "brand", profile_path, class: "dropdown-item" %>
            <hr class="mx-auto mt-1 mb-0 p-0 d-flex" style="width: 75%;">
          <p>Price</p>
          <%#= link_to "price", dashboard_path, class: "dropdown-item" %>
          <hr class="mx-auto mt-1 mb-0 p-0 d-flex" style="width: 75%;">
        </div>


        <div class="single_product_menu d-flex type="button" data-toggle="dropdown"><h5>Sort by</h5>
            <select style="display: none;"></select>
            <div class="nice-select" tabindex="0"><span class="current"><i class="fas fa-chevron-down"></i></span></div>
        </div>

<!--          <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Price
            <span class="caret"></span></button>
            <ul class="dropdown-menu">
              <li><a href="#">Filter by price</a></li>
              <li><a href="#">Filter by distance</a></li>
              <li><a href="#">Filter by something</a></li>
            </ul>
        <p>Filter by price</p>
        <p>Filter by distance?</p>
        <p>Filter by something</p> -->
    </div>
   </div>
  </div>


<div class="row">
    <div class="col-lg-8 py-3">

      <% @cameras.each do |c| %>
        <div class="card-product">
          <%= link_to camera_path(c), :class => "text-cards" do %>
          <%= cl_image_tag c.photo, height: 300, width: 400, crop: :fill %>
          <div class="card-product-infos">
            <div class="card-top-line">
            <h2> <%= c.name  %></h2>
            <h2><i class='fas fa-star'></i> <i class='fas fa-star'></i> <i class='fas fa-star'></i> <i class='fas fa-star'></i> <i class='fas fa-star'></i></h2>
            </div>
            <div>
            <h4> <%= c.category %></h4>
            <p> <%= c.description %></p>
            </div>
            <div class="card-bottom-line">
              <h2 class="fixed">$<%= c.price_per_day %></h2>
            </div>
             <% end %>
          </div>
      </div>
      <% end %>
    </div>

     <div class="col-sm-4 text-center py-3">
       <div
          id="map";
          style="width: 100%;
          height: 600px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
       ></div>
     </div>

  </div>
</div>
<%= render 'shared/footer' %>

