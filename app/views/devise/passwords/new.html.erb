<%= render 'shared/navbar' %>

<div class="my-5">
  <div class="card d-flex justify-content-center text-center align-items-column m-auto py-4" style="width: 450px">
    <h2>Forgot your password?</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs m-auto pt-3 " style="width: 75%;">
        <%= f.input :email,
                    label: false,
                    placeholder: 'email',
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary mb-2", style: "width: 75%;"  %>
      </div>
    <% end %>
    <hr class="mx-auto my-3" style="width: 75%;">
    <%= render "devise/shared/links" %>

  </div>
</div>
<%= render 'shared/footer' %>

