<%= render 'shared/navbar' %>


  <div class="container">
    <div class="row">
      <div class="col-md-6 py-3">
                      <div class="title">
                <h1> <span id="left"><%= @camera.name %></span>
                          <span id="right"> <%= link_to edit_camera_path(@camera), :class => "icons-show" do %>
                            <i class="fas fa-edit" id="edit-icons"></i>
                            <% end %>
                          <%= link_to camera_path(@camera), :class => "icons-show", method: :delete, data: { confirm: 'Are you sure?' }  do %>
                            <i class="fas fa-trash"id="edit-icons"></i>
                        <% end %>
              </div>

        <div class="class=rounded mx-auto d-block p-2">
          <%= cl_image_tag @camera.photo, height: 300, style: "width:100%" , crop: :fill %>
        </div>
              <div class="bookings-container ml-auto p-3 mb-4">
              <h3><strong>Book this camera now</strong></h3>

              <% if @booking.errors.any? %>
              <div class="errors-container">
                <ul>
                  <% @booking.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
              <% end %>


              <div id='cameras-booking-dates' data-unavailable="<%= @camera.unavailable_dates.to_json %>">
                  <% if current_user != @camera.user  %>
                     <%= simple_form_for([@camera, @booking]) do |f| %>
                         <%= f.input :rental_date, html5: true %>
                         <%= f.input :return_date, html5: true %>
                         <div id="booking-price">

                         </div>
                         <%= f.submit "Book", class: "buy--btn" %>
                      <% end %>
                  <% end %>
              </div>
            </div>
      </div>
      <div class="col-md-6 py-3">
        <h5 class="pt-2">
         <% if @camera.previous_camera %>
          <%= link_to 'previous', camera_path(@camera.previous_camera) %>
         <% end  %>
         <span>|</span>
         <% if @camera.next_camera %>
          <%= link_to 'next', camera_path(@camera.next_camera)  %>
         <% end  %>
       </h5>
          <div class="price">
            <span><%= @camera.price_per_day %> </span> $/Days
          </div>
          <div class="category-list-p">
            <ul class="list">
              <li>
                <a class="active">
              <span>Category</span> : DSLR</a>
              </li>
            </ul>
          </div>
        <div class="description">
          <h3></h3>
            <span>
            <p><strong> Description</strong></p>
            <p> <%= @camera.description %> </p>
            </span>
            <span>
            <p><strong>Address </strong></p>
            <p><%= @camera.address %></p>
            </span>
            <span>
            <p><strong>Policy </strong></p>
            <p><%= @camera.policies %></p>
            </span>
        </div>
      </div>
    </div>
  </div>

<%= render 'shared/footer' %>


