<%= render 'shared/navbar' %>

<div class="my-5">
  <div class="card d-flex justify-content-center text-center align-items-column m-auto py-4" style="width: 450px">
<h2>Change your password</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputsm-auto pt-3 " style="width: 75%;">
    <%= f.input :password,
                label: "New password",
                required: true,
                autofocus: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                label: "Confirm your new password",
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Change my password", class: "button-color mb-2", style: "width: 75%;"  %>
  </div>
<% end %>
<hr class="mx-auto my-3" style="width: 75%;">

    <%= render "devise/shared/links" %>
  </div>
</div>
<%= render 'shared/footer' %>
