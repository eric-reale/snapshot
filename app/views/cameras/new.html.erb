<h1>Add a new Camera</h1>

<%= simple_form_for(@camera) do |f| %>

<% if @camera.errors.any? %>
<div class="errors-container">
  <ul>
    <% @camera.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>


  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :policies %>
    <%= f.input :price_per_day %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>
<% end %>
